pipeline {
  agent any
  tools {
    maven 'maven-3.6.3' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomact-dev', path: '', url: 'http://localhost:8080')], contextPath: '/welcome', onFailure: false, war: 'webapp/target/*.war' 
        }
      }
    }
  }
}
